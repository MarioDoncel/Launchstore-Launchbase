{% extends 'layout.njk' %}

{% block content %}
    <section class="shop container">
        <h2>Ultimos Produtos</h2>
        <div class="items">
            {% for product in products %}
                <div class="product">
                    <div class="image" style="background-image: url('{% if product.img %}{{product.img}}{% else %}https://via.placeholder.com/500x360.png?text=Produto+sem+foto{% endif %}')">
                    </div>
                        {% if product.old_price != product.price %}
                            <div class="old-price">
                                {{product.old_price}}
                            </div>
                        {% endif %}
                        <p>{{product.price}}</p>
                        <h4>{{product.name}}</h4>
                        <a href="/products/{{product.id}}" class="button">Ver produto</a>
                    
                </div> <!-- Items -->
            {% endfor %}
        </div> <!-- Items -->
    </section>

{% endblock content %}