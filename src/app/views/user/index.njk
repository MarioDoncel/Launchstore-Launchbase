{% extends 'layout.njk' %}

{% import "parts/card.njk" as card %}

{% block content %}

    {%call card.render('Detalhes', 'user-dashboard container')%}
        <form  method="POST" action="/users?_method=PUT" >
            <div class="fields">
                {% include "user/fields.njk"%}
                <input type="hidden" name="id" value="{{user.id}}">
            </div>
                
            <button class="button edit" type="submit">Atualizar</button>
        </form>
        <form id="form-delete" method="POST" action="/users?_method=DELETE">
            <input type="hidden" name="id" value="{{user.id}}">
            <button class="button delete" type="submit">Deletar</button>
        </form>
    {%endcall%}    

    <script>
        const formDelete = document.querySelector("#form-delete")
        formDelete.addEventListener("submit", event => {
            const confirmation = confirm("Tem certeza que deseja excluir esta conta?(esta operação não poderá ser desfeita)")
            if(!confirmation) {
                event.preventDefault()
            }
        })
    </script>

{% endblock content %}


