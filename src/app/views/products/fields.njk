<div class="item">
    <div>Categoria</div>
    <div><select name="category_id">
        {% for category in categories %}
            <option value="{{category.id}}" {%if product.category_id == category.id %} selected {%endif%}>{{category.name}}</option>
        {% endfor %}
    </select></div>
</div>

<div class="item">
    <div>Título</div>
    <div><input type="text" name="name" id="" placeholder="Digite o Titulo do anuncio" value="{{product.name}}"></div>
</div>   

<div class="item">
    <div>Descrição</div>
    <div>
        <textarea name="description">{{product.description}}</textarea>
    </div>
</div>

<div class="item">
    <div>Fotos</div>
    <div>
        <div id="photos-upload">
            <input type="file" name="photos" id="photosInput" multiple accept="image/*" onchange="PhotosUpload.handleFileInput(event)">
            <p>Selecione até 6 fotos</p>
        </div>
        <div id="photos-preview">
        {% if files %}
            {% for image in files %}
                <div class="photo" id="{{image.id}}">
                    <img src="{{image.src}}" alt="{{image.name}}">
                    <i class="material-icons" onclick="PhotosUpload.removeOldPhoto(event)">close </i>
                </div>
            {% endfor %}
            <input type="hidden" name="removed_files">
        {% endif %}
        </div>
    </div>
</div>

<div class="item">
    <div>Valor</div>
    <div><input 
        type="text" 
        name="price" 
        value="{{product.formattedPrice}}" 
        placeholder="Preço do produto" 
        onkeydown="Mask.apply(this, 'formatBRL')">
    </div>
    {% if product.formattedOld_price %}
        <input type="hidden" name="old_price" value="{{product.formattedOld_price}}">
    {% endif %}
</div>

<div class="item">
    <div>Quantidade</div>
    <div><input type="number" name="quantity" value="{{product.quantity}}" placeholder="Estoque disponível"></div>
</div>

{% if product.status %}
    <div class="item">
        <div>Disponível</div>
        <div>
            <span><input type="radio" name="status" value="1" checked {%if product.status == "1" %}checked{%endif%}> Sim</span>
            <span><input type="radio" name="status" value="0" {%if product.status == "0" %}checked{%endif%}> Não</span>
        </div>
    </div>
{% endif %}
            
        